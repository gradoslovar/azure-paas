{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "servicePlanConfig": {
            "type": "object"
        },
        "storageConfig": {
            "type": "object"
        },
        "redisConfig": {
            "type": "object"
        },
        "nestedDeploymentName": {
            "type": "object"
        },
        "appLocation": {
            "type": "string"
        }
    },
    "variables": {
        "deploymentApiVersion": "2017-05-10"
    },
    "resources": [
        {
            "name": "[parameters('nestedDeploymentName').storage]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gradoslovar/azure-paas/develop/resources/storageAccount.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageConfig": {"value": "[parameters('storageConfig')]"},
                    "storagePurpose": {"value": "logs"},
                    "appLocation": {"value": "[parameters('appLocation')]"}
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').webfarm]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gradoslovar/azure-paas/develop/resources/webFarm.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "servicePLanConfig": {"value": "[parameters('servicePlanConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"}                
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').webapp]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', parameters('nestedDeploymentName').webfarm)]"
            ],
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gradoslovar/azure-paas/develop/resources/webApp.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "servicePLanConfig": {"value": "[parameters('servicePlanConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"},
                    "dependencies": {
                        "value": {
                          "applicationInsight": {
                            "resourceGroup": "[resourceGroup().name]",
                            "name": "[reference('appInsightsDeploy').outputs.applicationInsightsName.value]",
                            "instrumentationKey": "[reference('appInsightsDeploy').outputs.applicationInsightsInstrumentationKey.value]"
                          },
                          "storageAccounts": [
                            { // 0 - Storage
                              "resourceGroup": "[resourceGroup().name]",
                              "name": "[reference('storageDeploy').outputs.storageAccountName.value]",
                              "connectionString": "[reference('storageDeploy').outputs.storageAccountConnectionString.value]"
                            }
                          ]
                        }
                      }
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').hostname]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gradoslovar/azure-paas/develop/resources/customDomain.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "customHostName": {"value": "deuxmoulins.com"},
                    "appLocation": {"value": "[parameters('appLocation')]"}
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').appins]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', parameters('nestedDeploymentName').webfarm)]"
            ],
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gradoslovar/azure-paas/develop/resources/appInsights.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "servicePLanConfig": {"value": "[parameters('servicePlanConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"}
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').redis]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gradoslovar/azure-paas/develop/resources/redisCache.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "redisConfig": {"value": "[parameters('redisConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"}
                }
            }
        }  
    ],
    "outputs": {}
}