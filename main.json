{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "servicePlanConfig": {
            "type": "object"
        },
        "storageConfig": {
            "type": "object"
        },
        "redisConfig": {
            "type": "object"
        },
        "dnsConfig": {
            "type": "object"
        },
        "nestedDeploymentName": {
            "type": "object"
        },
        "deploymentConfig": {
            "type": "object"
        },
        "appLocation": {
            "type": "string"
        }
    },
    "variables": {
        "deploymentApiVersion": "2017-05-10"
    },
    "resources": [
        {
            "name": "[parameters('nestedDeploymentName').storage]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri":"[concat(parameters('deploymentConfig').containerUri,'/resources/storageAccount.json',parameters('deploymentConfig').containerSasToken)]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageConfig": {"value": "[parameters('storageConfig')]"},
                    "storagePurpose": {"value": "logs"},
                    "appLocation": {"value": "[parameters('appLocation')]"}
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').webfarm]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('deploymentConfig').containerUri,'/resources/webFarm.json',parameters('deploymentConfig').containerSasToken)]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "servicePLanConfig": {"value": "[parameters('servicePlanConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"}                
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').webapp]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', parameters('nestedDeploymentName').webfarm)]"
            ],
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('deploymentConfig').containerUri,'/resources/webApp.json',parameters('deploymentConfig').containerSasToken)]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "servicePLanConfig": {"value": "[parameters('servicePlanConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"},
                    "dependencies": {
                        "value": {
                          "applicationInsight": {
                            "instrumentationKey": "[reference('appInsightsDeploy').outputs.applicationInsightsInstrumentationKey.value]"
                          },
                          "storageAccounts": [
                            { 
                              "connectionString": "[reference('storageDeploy').outputs.storageAccountConnectionString.value]"
                            }
                          ]
                        }
                      }
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').dnszone]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "resourceGroup": "DNS",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('deploymentConfig').containerUri,'/resources/dnsZone.json',parameters('deploymentConfig').containerSasToken)]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dnsConfig": {"value": "[parameters('dnsConfig')]"}
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').dnscname]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "resourceGroup": "DNS",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('deploymentConfig').containerUri,'/resources/dnsCname.json',parameters('deploymentConfig').containerSasToken)]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dnsConfig": {"value": "[parameters('dnsConfig')]"},
                    "dependencies": {
                        "value": {
                          "webApp": {
                            "fqdn": "[reference('webAppDeploy').outputs.webAppFQDN.value]"
                          }
                        }
                    }
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').hostname]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', parameters('nestedDeploymentName').webapp)]"
            ],
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('deploymentConfig').containerUri,'/resources/customDomain.json',parameters('deploymentConfig').containerSasToken)]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "customHostName": {"value": "[concat(parameters('dnsConfig').cname,'.',parameters('dnsConfig').zone)]"},
                    "dependencies": {
                        "value": {
                          "webApp": {
                            "name": "[reference('webAppDeploy').outputs.webAppName.value]"
                          }
                        }
                    }
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').appins]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', parameters('nestedDeploymentName').webfarm)]"
            ],
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('deploymentConfig').containerUri,'/resources/appInsights.json',parameters('deploymentConfig').containerSasToken)]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "servicePLanConfig": {"value": "[parameters('servicePlanConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"}
                }
            }
        },
        {
            "name": "[parameters('nestedDeploymentName').redis]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('deploymentConfig').containerUri,'/resources/redisCache.json',parameters('deploymentConfig').containerSasToken)]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "redisConfig": {"value": "[parameters('redisConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"}
                }
            }
        }  
    ],
    "outputs": {}
}