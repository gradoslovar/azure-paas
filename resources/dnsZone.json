{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "zoneName": {
            "type": "string"
        }
    },
    "variables": {
        "dnsZoneApiVersion": "2017-10-01"
    },
    "resources": [
        {
            "type": "Microsoft.Network/dnszones",
            "name": "[parameters('zoneName')]",
            "apiVersion": "[variables('dnsZoneApiVersion')]",
            "location": "global",
            "properties": {}
        }
    ],
    "outputs": {
        "ns1": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/dnszones', parameters('zoneName')), '2017-10-01').nameServers[0]]"
        },
        "ns2": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/dnszones', parameters('zoneName')), '2017-10-01').nameServers[1]]"
        },
        "ns3": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/dnszones', parameters('zoneName')), '2017-10-01').nameServers[2]]"
        },
        "ns4": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/dnszones', parameters('zoneName')), '2017-10-01').nameServers[3]]"
        }
    }
}